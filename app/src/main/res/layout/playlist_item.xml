<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/plist_image"
            android:layout_marginStart="5dp"
            android:background="@color/accent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/pList_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/plist_image"
            android:fontFamily="@font/inter_semibold"
            android:text="Playlist Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pList_user"
            android:layout_width="227dp"
            android:layout_height="31dp"
            android:layout_below="@+id/pList_title"
            android:layout_alignBottom="@+id/plist_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/plist_image"
            android:text="Music Author" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>