<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#75000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/moodpopupbg"
        android:elevation="30dp"
        android:orientation="vertical"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/moodCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="@font/inter_semibold"
                android:text="How are you feeling today?"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/moodCheck"
                android:padding="15dp">

                <Button
                    android:id="@+id/energetic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/relaxing"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/energetic"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/happy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/relaxing"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/sad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/happy"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/motivational"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/sad"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/chill"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/motivational"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/romantic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/chill"
                    android:background="@drawable/circle" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>